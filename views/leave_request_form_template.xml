<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Leave Request Form Template -->
        <template id="leave_request_form_template" name="Leave Request Form">
            <head>
                <title>Leave Request - AGB Communication</title>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>   
                <link rel="stylesheet" type="text/css" href="/AGB_HR/static/src/css/attendance_dashboard.css"/>
                <link rel="stylesheet" type="text/css" href="/AGB_HR/static/src/css/leave_request.css"/>
                <script type="text/javascript" src="/AGB_HR/static/src/js/leave_request.js"/>
                <meta name="csrf-token" t-att-content="request.csrf_token()"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            </head>
            <body>
                <div class="agb-app-container">
                    <!-- Sticky Top Navigation -->
                    <div class="agb-top-nav agb-sticky-header">
                        <h1 class="agb-nav-title">Leave Request</h1>
                        <div class="agb-nav-actions">
                        
                            <button class="agb-btn agb-btn-link" onclick="window.location.href='/attendance/dashboard'">
                                <i class="fa fa-arrow-left"></i> Dashboard
                            </button>
                            <a href="/attendance/logout" class="agb-btn agb-btn-link">
                                <i class="fa fa-sign-out"></i> Logout
                            </a>
                        </div>
                    </div>

                    <!-- Main Content Wrapper -->
                    <div class="agb-main-content-wrapper">
                        <div id="leave-request-app"
                            t-att-data-employee-number="employee.employee_number"
                            t-att-data-employee-name="employee.name"></div>
                        
                        <!-- Fallback for non-JS users -->
                        <noscript>
                            <div class="agb-alert agb-alert-danger">
                                <i class="fa fa-exclamation-triangle"></i>
                                <strong>JavaScript Required:</strong> 
                                This form requires JavaScript to function properly. 
                                Please enable JavaScript in your browser.
                            </div>
                        </noscript>
                    </div>

                    <!-- Sticky Footer -->
                    <div class="agb-footer agb-sticky-footer">
                        <p>copyright ©AGB Communication 2025 .All Rights Reserved.</p>
                        <p>Secure Emplyee Attendance &amp; Leave Management System v1.0</p> 
                    </div>
                </div>
            </body>
        </template>

        <!-- Leave Request Success Template -->
        <template id="leave_request_success_template" name="Leave Request Success">
            <head>
                <title>Leave Request Success - AGB Communication</title>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>    
                <link rel="stylesheet" type="text/css" href="/AGB_HR/static/src/css/attendance_dashboard.css"/>
                <link rel="stylesheet" type="text/css" href="/AGB_HR/static/src/css/leave_request.css"/>
                <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
            </head>
            <body>
                <div class="agb-app-container">
                    <!-- Sticky Top Navigation -->
                    <div class="agb-top-nav agb-sticky-header">
                        <h1 class="agb-nav-title">Request Submitted</h1>
                        <div class="agb-nav-actions">
                            <button class="agb-btn agb-btn-link" onclick="window.location.href='/attendance/dashboard'">
                                <i class="fa fa-arrow-left"></i> Dashboard
                            </button>
                            <a href="/attendance/logout" class="agb-btn agb-btn-link">
                                <i class="fa fa-sign-out"></i> Logout
                            </a>
                        </div>
                    </div>

                    <!-- Main Content Wrapper -->
                    <div class="agb-main-content-wrapper">
                        <!-- Success Content -->
                        <div class="agb-form-card">
                            <div class="agb-form-header">
                                <i class="fa fa-check-circle"></i>
                                <!-- <h2>Request Submitted Successfully</h2> -->
                                <p>Your leave request has been submitted for approval</p>
                            </div>
                            
                            <div class="agb-form-content">
                                <div class="agb-success-grid">
                                    <div class="agb-success-section">
                                        <h3 style="margin-top: 20px"><i class="fa fa-info-circle"></i> Request Details</h3>
                                        <!-- <div class="agb-info-grid">
                                            <div class="agb-info-item">
                                                <strong><label>Employee:    </label></strong>
                                                <span><t t-esc="employee_name"/></span>
                                            </div>
                                            <div class="agb-info-item">
                                                <strong><label>Leave Type:  </label></strong>
                                                <span><t t-esc="leave_type"/></span>
                                            </div>
                                            <div class="agb-info-item">
                                                <strong><label>Duration:    </label></strong>
                                                <span><t t-esc="number_of_days"/> day(s)</span>
                                            </div>
                                            <div class="agb-info-item">
                                                <strong><label>From Date:   </label></strong>
                                                <span><t t-esc="date_from"/></span>
                                            </div>

                                            <div class="agb-info-item">
                                                <strong><label>To Date: </label></strong>
                                                <span><t t-esc="date_to"/></span>
                                            </div>
                                            <div class="agb-info-item full-width">
                                                <strong><label>Description: </label></strong>
                                                <span><t t-esc="description"/></span>
                                            </div>
                                        </div> -->
                                        <table class="agb-info-table">
                                            <tr>
                                                <td><strong><label>Employee:</label></strong></td>
                                                <td><t t-esc="employee_name"/></td>
                                            </tr>
                                            <tr>
                                                <td><strong><label>Leave Type:</label></strong></td>
                                                <td><t t-esc="leave_type"/></td>
                                            </tr>
                                            <tr>
                                                <td><strong><label>Duration:</label></strong></td>
                                                <td><t t-esc="number_of_days"/> day(s)</td>
                                            </tr>
                                            <tr>
                                                <td><strong><label>From Date:</label></strong></td>
                                                <td><t t-esc="date_from"/></td>
                                            </tr>
                                            <tr>
                                                <td><strong><label>To Date:</label></strong></td>
                                                <td><t t-esc="date_to"/></td>
                                            </tr>
                                            <tr>
                                                <td><strong><label>Description:</label></strong></td>
                                                <td><t t-esc="description"/></td>
                                            </tr>
                                        </table>

                                    </div>
                                    
                                    <div class="agb-success-section">
                                        <h3 style="margin-top: 20px"><i class="fa fa-tasks"></i> Next Steps</h3>
                                        <div class="agb-steps-list">
                                            <div class="agb-step">
                                                <i class="fa fa-check-circle"></i>
                                                <span>Your request has been submitted</span>
                                            </div>
                                            <div class="agb-step">
                                                <i class="fa fa-clock-o"></i>
                                                <span>Waiting for manager approval</span>
                                            </div>
                                            <div class="agb-step">
                                                <i class="fa fa-envelope"></i>
                                                <span>You'll receive email notifications</span>
                                            </div>
                                            <div class="agb-step">
                                                <i class="fa fa-list"></i>
                                                <span>Check status in your dashboard</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="agb-success-actions">
                                    <a href="/leave/request" class="agb-btn agb-btn-primary" style="margin-top: 20px;">
                                        <i class="fa fa-plus"></i> Submit Another Request
                                    </a>
                                    <!-- <a href="/attendance/dashboard" class="agb-btn agb-btn-outline">
                                        <i class="fa fa-dashboard"></i> Back to Dashboard
                                    </a> -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Sticky Footer -->
                    <div class="agb-footer agb-sticky-footer">
                        <p>copyright ©AGB Communication 2025 .All Rights Reserved.</p>
                        <p>Secure Emplyee Attendance &amp; Leave Management System v1.0</p> 
                    </div>
                </div>
            </body>
        </template>
    </data>
</odoo>
    